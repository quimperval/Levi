<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RLFlujoCanal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Tb_flujocanal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_perval"
        app:title="@string/app_name"
        app:subtitle="@string/Tit_Manning"
        app:titleTextColor="@color/blanco"
        android:theme="@style/ToolbarTheme"
        >
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/TLay_flujocanal"

        android:layout_below="@+id/Tb_flujocanal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolbarTheme"
        >


    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/VPager_flujocanal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TLay_flujocanal"
        android:layout_above="@id/LLAdView_flujocanal"
        >
    </android.support.v4.view.ViewPager>





    <LinearLayout
        android:id="@+id/LLAdView_flujocanal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView_flujocanal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/UnitId"
            ></com.google.android.gms.ads.AdView>
    </LinearLayout>
</RelativeLayout>